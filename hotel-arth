server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html/laravel/public;
    server_name hotel-arth.fr www.hotel-arth.fr;

    listen 443 ssl; # managed by Certbot

    # RSA certificate
    ssl_certificate /etc/letsencrypt/live/hotel-arth.fr/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/hotel-arth.fr/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    # Redirect non-https traffic to https
    if ($scheme != "https") {
        return 301 https://$host$request_uri;
    } # managed by Certbot
}
